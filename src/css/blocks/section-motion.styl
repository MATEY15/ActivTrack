.section_motion
	padding-top 120px
	padding-bottom 100px
	@media screen and (max-width: 540px)
		padding-top 70px
		padding-bottom 45px

.motion__content
	display flex
	flex-direction row
	justify-content space-between
	margin-top 65px
	@media screen and (max-width: 540px)
		flex-direction column

.content-item--items
	&:not(:last-child)
		margin-bottom 42px
		@media screen and (max-width: 540px)
			margin-bottom 34px
	@media screen and (max-width: 540px)
		margin-bottom 34px
	.icon
		margin-bottom 27px
	h4
		font-size 16px
		font-family: fPoppinsBold
		c cBlack
		margin-bottom 14px
	p
		font-size 15px
		line-height 23px
		c #a4a4a4

.circle-block
	position relative
	flex-wrap wrap
	display flex
	min-width 430px
	min-height 364px
	@media screen and (max-width: 1024px)
		min-width 100%
		width 364px
	@media screen and (max-width: 900px)
		width 270px
	.circle-img
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		@media screen and (max-width: 1024px)
			opacity .7
	.circle-img--product
		position relative
		margin auto

.motion
	&__content-item
		@media screen and (max-width: 640px)
			&:nth-child(1)
				padding-right 10px
			&:nth-child(2)
				display none
			&:nth-child(3)
				padding-left 10px
		@media screen and (max-width: 540px)
			width 100%
			padding-left 0
			padding-right 0


// Two part

.motion
	&__motion-wrapper
		display flex
		flex-direction row
		justify-content space-between
		margin-top 92px
		@media screen and (max-width: 720px)
			flex-wrap wrap
			justify-content center
		@media screen and (max-width: 540px)
			margin-top 70px
			margin-bottom 50px
	&__items
		position relative
		width 33.3%
		max-width 315px
		text-align center
		padding 0 10px
		@media screen and (max-width: 720px)
			width 50%
		@media screen and (max-width: 540px)
			width 100%
			&:not(:last-child)
				margin-bottom 30px
		&:nth-child(1)
			.motion__icon
				&:before
					background: #f3495e
		&:nth-child(2)
			.motion__icon
				&:before
					background: #62d0b8
		&:nth-child(3)
			.motion__icon
				&:before
					background: #4a90e2
	&__icon
		position relative
		width 80px
		height 80px
		border-radius 50%
		margin 0 auto 21px
		overflow hidden
		&:before
			position absolute
			top 0
			left 0
			display block
			content ''
			opacity: .14
			width 100%
			height 100%
		img
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)
	p
		font-size 16px
		line-height 24px
		font-family: fPoppinsMedium
		c cBlack
		@media screen and (max-width: 854px)
			br
				display none
		@media screen and (max-width: 720px)
			br
				display block