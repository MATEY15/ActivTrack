.news-wrapper
	padding-bottom 120px
	@media screen and (max-width: 1180px)
		overflow hidden
	@media screen and (max-width: 854px)
		padding-bottom 65px
	.news
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content space-between
		margin 64px -18px 0
		@media screen and (max-width: 992px)
			margin 64px -10px 0
		@media screen and (max-width: 800px)
			justify-content center
		&__items
			margin: 0 18px
			width calc(100% / 3 - 36px)
			@media screen and (max-width: 992px)
				margin: 0 10px
				width calc(100% / 3 - 20px)
			@media screen and (max-width: 800px)
				width calc(100% / 2 - 20px)
				max-width 335px
				margin-bottom 26px
			@media screen and (max-width: 600px)
				width 100%
		&__block-images
			position relative
			display inline-block
			height 215px
			width 100%
			overflow hidden
			margin-bottom 27px
			@media screen and (max-width: 1024px)
				height 190px
			@media screen and (max-width: 992px)
				height 180px
			@media screen and (max-width: 900px)
				height 170px
			@media screen and (max-width: 854px)
				height 160px
				margin-bottom 16px
			@media screen and (max-width: 600px)
				height 215px
			img
				width 100%
				height auto
				position absolute
				top 50%
				left 50%
				transform translate(-50%, -50%)
		&__date
			font-size 14px
			font-family: fPoppinsMedium
			line-height 30px
			color: rgba(120, 114, 122, 0.5)
			margin-bottom 6px
			@media screen and (max-width: 854px)
				font-size 13px
		&__heading-news
			font-size: 18px
			font-family: fPoppinsBold
			line-height: 30px
			c cBlack
			margin-bottom 12px
			@media screen and (max-width: 854px)
				font-size 16px
			a
				c cBlack
				text-decoration none
		&__desc-news
			font-family: fPoppinsMedium
			font-size 18px
			c #78727a
			line-height: 30px
			margin-bottom 32px
			@media screen and (max-width: 854px)
				font-size 16px
				margin-bottom 26px
		&__more
			font-family: fPoppinsSemiBold
			font-size 15px
			c #f3495e
			text-decoration none