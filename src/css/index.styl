/* Datapicker */

.ui-datepicker
	padding 0
	.ui-widget-header
		background: #070707
		color #fff
	td
		background: #070707
	a,
	td
		padding-right 10px
		&:hover
			a
				color: #fff
.ui-widget-content
	background: #070707
.ui-state-default,
.ui-widget-content .ui-state-default
	border none !important
	background: #070707
	color #737373
.ui-corner-all
	border 0
	border-bottom 1px solid #737373
.ui-state-active
	color #19bfbb !important
.ui-datepicker-today
	a
		color #19bfbb !important
.ui-corner-all
	position relative
	.ui-datepicker-next,
	.ui-datepicker-prev
		cursor pointer
		border-bottom 0
		tansition all .25s ease-out
		&:hover
			&:after
				border-color #19bfbb
		&:after
			width: 8px
			height: 8px
			margin-right -4px
			margin-top -4px
			position: absolute
			content: ''
			border: 2px solid #fff
			-webkit-transform: rotate(-135deg)
			transform: rotate(-135deg)
			right: 50%
			top: 50%
			transition: all .3s ease-out
	.ui-datepicker-next
		&:after
			border-width: 0 0 2px 2px
	.ui-datepicker-prev
		&:after
			border-width: 2px 2px 0 0
.ui-widget-header .ui-state-hover
	background none !important
	border transparent
.ui-datepicker .ui-datepicker-next-hover
	right 2px !important
	top 2px !important
.ui-datepicker .ui-datepicker-prev-hover
	top 2px !important
	left 2px !important

/* Datapicker End */

/* Select */

.custom-select
	position: relative
	width 100%
	border-bottom: 1px solid rgba(255,255,255,.2)

.custom-select select
	display: none

.select-selected
	font-size: 13px
	color: #333

.select-selected.select-arrow-active:after
	transform: rotate(-180deg)

.select-selected:after
	position: absolute
	content: ""
	top: 14px
	right: 9px
	width: 8px
	height: 5px
	z-index: 2
	pointer-events: none
	-webkit-transition: all .25s ease-out
	-o-transition: all .25s ease-out
	transition: all .25s ease-out

.select-selected
	font-size: 1.375rem
	line-height: 2.875rem
	padding: 0px 10px 3px 10px
	color: #fff
	outline: none
	cursor: pointer

.select-items
	opacity: 1
	font-size: 14px
	line-height: 24px
	visibility: visible
	position: absolute
	color: #fff
	background: #070707
	top: 110%
	left: 0
	right: 0
	z-index: 99
	max-height 200px
	overflow-y scroll
	-webkit-transition: all .1s ease-in-out
	-o-transition: all .1s ease-in-out
	transition: all .1s ease-in-out
	-webkit-box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175)
	box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175)

.select-items div
	padding: 8px 16px
	cursor: pointer

.select-items div:hover
	background: #070707
	color: #fff

.select-hide
	opacity: 0
	visibility: hidden
	top: 140%

.select-items div:hover,
.same-as-selected
	background: #070707
	color: #19bfbb

