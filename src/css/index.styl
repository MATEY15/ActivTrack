/* Select */

.custom-select
	position: relative
	width 100%
	border-bottom: 1px solid rgba(255,255,255,.2)

.custom-select select
	display: none

.select-selected
	font-size: 13px
	color: #333

.select-selected.select-arrow-active:after
	transform: rotate(-180deg)

.select-selected:after
	position: absolute
	content: ""
	top: 14px
	right: 9px
	width: 8px
	height: 5px
	z-index: 2
	pointer-events: none
	-webkit-transition: all .25s ease-out
	-o-transition: all .25s ease-out
	transition: all .25s ease-out

.select-selected
	font-size: 1.375rem
	line-height: 2.875rem
	padding: 0px 10px 3px 10px
	color: #fff
	outline: none
	cursor: pointer

.select-items
	opacity: 1
	font-size: 14px
	line-height: 24px
	visibility: visible
	position: absolute
	color: #fff
	background: #070707
	top: 110%
	left: 0
	right: 0
	z-index: 99
	max-height 200px
	overflow-y scroll
	-webkit-transition: all .1s ease-in-out
	-o-transition: all .1s ease-in-out
	transition: all .1s ease-in-out
	-webkit-box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175)
	box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175)

.select-items div
	padding: 8px 16px
	cursor: pointer

.select-items div:hover
	background: #070707
	color: #fff

.select-hide
	opacity: 0
	visibility: hidden
	top: 140%

.select-items div:hover,
.same-as-selected
	background: #070707
	color: #19bfbb

